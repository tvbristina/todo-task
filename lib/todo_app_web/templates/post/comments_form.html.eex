<h2>You Can Create The Comment</h2>
<%= form_for @changeset, @action, fn f -> %>
  <div class="form-group">
   <label>Name</label>
   <%= text_input f, :name %>
  </div>
  <div class="form-group">
    <label>Content</label>
    <%= textarea f, :content %>
  </div>

  <div class="form-group">
    <%= submit "Add comment" %>
  </div>
<% end %>
